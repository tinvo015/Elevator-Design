module userInput (Clock, Reset, KEY, floors);

	input logic Clock, Reset;

	input logic [2:0] KEY; //user input

	output logic [5:0] floors; // floors that are pressed

	

	// Next State logic
	always_comb begin

			3'b000: 	floors[0] = 1; 
			3'b001: 	floors[1] = 1; 
			3'b010: 	floors[2] = 1; 
			3'b011: 	floors[3] = 1; 
			3'b100: 	floors[4] = 1; 
			3'b101: 	floors[5] = 1; 		
			default: floors = 6'bX;
			
		endcase
						
	end


	// DFFs
	always_ff @(posedge Clock) begin
		if (Reset)
			ps <= unPressed;
		else
			ps <= ns;
	end

endmodule 