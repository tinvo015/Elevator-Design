module hexdisplay(clock, currentFloor, Up, Down, HEX0, HEX2, HEX3, HEX4);

	logic clock;
	logic [5:0] currentFloor;
	logic Up, Down;
	logic [6:0] HEX0, HEX2, HEX3, HEX4;
	
	always_comb begin
		if (currentFloor = 6'b000001) begin
			HEX4 = 7'b1001111;
			HEX3 = 7'b1111111;
			HEX2 = 7'b1111111;
		end else if (currentFloor = 6'b000010) begin
			HEX4 = 7'b0100100;
			HEX3 = 7'b1001000;
			HEX2 = 7'b1001000;
		end else if (currentFloor = 6'b000100) begin
			HEX4 = 7'b0100100;
			HEX3 = 7'b1001000;
			HEX2 = 7'b1001000;
		end else if (currentFloor = 6'b001000) begin
			HEX4 = 7'b0100100;
			HEX3 = 7'b1001000;
			HEX2 = 7'b1001000;
		end else if (currentFloor = 6'b010000) begin
			HEX4 = 7'b0100100;
			HEX3 = 7'b1001000;
			HEX2 = 7'b1001000;
		end else begin
			HEX4 = 7'b0100100;
			HEX3 = 7'b1001000;
			HEX2 = 7'b1001000;
		end
		
		if (Up)
			HEX0 = 7'b1000001;
		else 
			HEX0 = 7'b0100001;
	end
endmodule

		